@model IEnumerable<Be_USERS>
@{Layout = null;}
@if (Model.Count() > 0)
 {
<div class='row'>
<div class='col-md-12 col-sm-12'>
<table id='tblUsers' class='table table-bordered mb-0'>
<thead class='thead-default'>
<tr>
</tr>
</thead>
<tbody>
@foreach (Be_USERS item in Model) {
<tr>
<td>
@item.CUENTA</td>
<td>
@item.COD_OP</td>
<td>
@item.X_USER_OLD_COUSUMOD</td>
<td>
@item.FEC_VEN_CTA</td>
<td>
@item.USERNAME</td>
<td>
@item.IDUSERSDGU</td>
<td>
@item.CLAVE</td>
<td>
 <button type='button' title='Editar' class='btn btn-icon btn-pure success edita-users' data-target='#WinComun' data-codigo='{ "IDUSERSROP": @item.IDUSERSROP,  "CoEstadoPagina": "@Enu.CoEstadoPagina.Edicion"}'><i class='fa fa-pencil'></i></button></td>
<td>
<button type='button' data-codigo='{"IDUSERSROP": @item.IDUSERSROP, "CO_EST_REG": @(item.CO_EST_REG == 1 ? 0 : 1)  }' title=@(item.CO_EST_REG == 1 ? "¿Desactivar?": "¿Activar ?") class='btn btn-icon btn-pure success' data-toggle='activa-users' data-placement='top'>
<i class='@(item.CO_EST_REG == 1 ? "fa fa-check" : "fa fa-thumbs-o-down")'></i>
</button>
</td>
<td>
<button type='button' data-codigo='{"IDUSERSROP": @item.IDUSERSROP}' title='¿Eliminar?' class='btn btn-icon btn-pure danger' data-toggle='elimina-users' data-placement='top'>
<i class='fa fa-trash-o'></i>
</button>
</td>
<td>
@item.COD_ENTE</td>
<td>
@item.FEC_VEN_PSW</td>
<td>
@item.AMBITO</td>
<td>
@item.COPERFIL</td>
<td>
@item.COD_AREA</td>
</tr>
}
</tbody>
</table>
</div>
</div>
}
@Glo.Paginador()
