<script type="text/javascript">
function GetsUsers(e, criterio) {
var Filter = {};
criterio = $.extend({}, criterio, Filter);
$('#divUsers').empty();
$.ajax({
url: '@Url.Action("Gets", "Users", new { area= "Seguridad" })',
type: 'GET',
cache: false,
async: true,
data: criterio,
success: function (data) {
$('#divUsers').html(data);
},
complete: function () {
$('#tblUsers').tablaFuncional({ funcion: 'GetsUsers', data: criterio });
$('[data-toggle="elimina-Users"]').confirmar({ funcion: 'ConfirmaEliminaUsers' });
$('[data-toggle="activa-Users"]').confirmar({ funcion: 'ConfirmaActivaUsers' });
$('.edita-Users').click(GetUsers);
}
});
}
$(function () {
$('#btnNuevoUsers').click(GetUsers);
GetsUsers();
});

GetUsers = function () {
var codigo = this.codigo;
if (codigo == null || codigo == undefined) { codigo = $(this).data('codigo'); }
$.ajax({
url: '@Url.Action("Get", "Users", new { area = "Seguridad" } )',
type: 'Get',
cache: false,
data: codigo,
success: function (data) {
DefaultModal(data, { Titulo: 'Titulo'});
} 
});
}

 function ConfirmaEliminaUsers(codigo) {
$.ajax({
url: '@Url.Action("Del", "api/UsersApi", new { area= "Seguridad" })',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsUsers();
},
});
 }
function ConfirmaActivaUsers(codigo) {
$.ajax({
url: '@Url.Action("EditEstReg", "api/ UsersApi", new { area= "Seguridad"})',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsUsers();
},
});
}
</script>
