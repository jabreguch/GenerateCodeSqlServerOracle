</div>



</div>
@Html.hidden(x => x.CoEstadoPagina)
</form>
<script type="text/javascript">
$(function () {
$('#frmUsers').validate(DefaultOptionValidate);
$('#WinComun button[id=btnGraba]').unbind('click').on('click', GrabaUsers);
 });

GrabaUsers = function () {
if ($('#frmUsers').valid()) {
var data = FormToJson(document.getElementById('frmUsers'));
$.ajax({
url: '@Url.Action("Graba","api/UsersApi", new { area= "Seguridad" })',
dataType: 'json',
type: 'POST',
cache: false,
data: data,
success: function (d) {
if (d.success == true) {
var item = d.data;
GetUsers.call({ 'codigo': item });
GetsUsers();
}
}
 });
}
}
</script>
