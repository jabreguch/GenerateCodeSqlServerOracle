<div class='form-body' >
</div>
<div id='divTrftipo' class='dataTables_wrapper dt-bootstrap4 no-footer'>
</div>
</form>
</div>
</div>
</section>

<script type="text/javascript">
function GetsTrftipo(e, criterio) {
var Filter = {};
criterio = $.extend({}, criterio, Filter);
$('#divTrftipo').empty();
$.ajax({
url: '@Url.Action("Gets", "Trftipo", new { area= "Maestros" })',
type: 'GET',
cache: false,
async: true,
data: criterio,
success: function (data) {
$('#divTrftipo').html(data);
},
complete: function () {
$('#tblTrftipo').tablaFuncional({ funcion: 'GetsTrftipo', data: criterio });
$('[data-toggle="elimina-Trftipo"]').confirmar({ funcion: 'ConfirmaEliminaTrftipo' });
$('[data-toggle="activa-Trftipo"]').confirmar({ funcion: 'ConfirmaActivaTrftipo' });
$('.edita-Trftipo').click(GetTrftipo);
}
});
}
$(function () {
$('#btnNuevoTrftipo').click(GetTrftipo);
GetsTrftipo();
});

GetTrftipo = function () {
var codigo = this.codigo;
if (codigo == null || codigo == undefined) { codigo = $(this).data('codigo'); }
$.ajax({
url: '@Url.Action("Get", "Trftipo", new { area = "Maestros" } )',
type: 'Get',
cache: false,
data: codigo,
success: function (data) {
DefaultModal(data, { Titulo: 'Titulo'});
} 
});
}

 function ConfirmaEliminaTrftipo(codigo) {
$.ajax({
url: '@Url.Action("Del", "api/TrftipoApi", new { area= "Maestros" })',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsTrftipo();
},
});
 }
function ConfirmaActivaTrftipo(codigo) {
$.ajax({
url: '@Url.Action("EditEstReg", "api/ TrftipoApi", new { area= "Maestros"})',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsTrftipo();
},
});
}
</script>
