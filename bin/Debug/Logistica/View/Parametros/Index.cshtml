<div class='form-body' >
</div>
<div id='divParametros' class='dataTables_wrapper dt-bootstrap4 no-footer'>
</div>
</form>
</div>
</div>
</section>

<script type="text/javascript">
function GetsParametros(e, criterio) {
var Filter = {};
criterio = $.extend({}, criterio, Filter);
$('#divParametros').empty();
$.ajax({
url: '@Url.Action("Gets", "Parametros", new { area= "Maestros" })',
type: 'GET',
cache: false,
async: true,
data: criterio,
success: function (data) {
$('#divParametros').html(data);
},
complete: function () {
$('#tblParametros').tablaFuncional({ funcion: 'GetsParametros', data: criterio });
$('[data-toggle="elimina-Parametros"]').confirmar({ funcion: 'ConfirmaEliminaParametros' });
$('[data-toggle="activa-Parametros"]').confirmar({ funcion: 'ConfirmaActivaParametros' });
$('.edita-Parametros').click(GetParametros);
}
});
}
$(function () {
$('#btnNuevoParametros').click(GetParametros);
GetsParametros();
});

GetParametros = function () {
var codigo = this.codigo;
if (codigo == null || codigo == undefined) { codigo = $(this).data('codigo'); }
$.ajax({
url: '@Url.Action("Get", "Parametros", new { area = "Maestros" } )',
type: 'Get',
cache: false,
data: codigo,
success: function (data) {
DefaultModal(data, { Titulo: 'Titulo'});
} 
});
}

 function ConfirmaEliminaParametros(codigo) {
$.ajax({
url: '@Url.Action("Del", "api/ParametrosApi", new { area= "Maestros" })',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsParametros();
},
});
 }
function ConfirmaActivaParametros(codigo) {
$.ajax({
url: '@Url.Action("EditEstReg", "api/ ParametrosApi", new { area= "Maestros"})',
dataType: 'json',
type: 'POST',
cache: false,
data: codigo,
success: function (d) {
GetsParametros();
},
});
}
</script>
